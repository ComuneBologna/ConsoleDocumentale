<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel>
		<g:HTMLPanel>
			<h1 class="maintitle"> Inserimento campi </h1>
		</g:HTMLPanel>
		<g:HTMLPanel stylePrimaryName="single">
			<g:HTMLPanel ui:field="alertPanel" visible="false">
			</g:HTMLPanel>
			   
			<g:HTMLPanel stylePrimaryName="filters">
				<fieldset>
					<g:HTMLPanel ui:field="campiPanel" />
				</fieldset>
			</g:HTMLPanel>
				   
			   
			<g:HTMLPanel ui:field="nomeFilePanel" stylePrimaryName="filters">
				<fieldset>
					<h6>Inserisci il nome del file generato dal modello</h6>
					
					<g:HTMLPanel styleName="cell acapo">
					
						<span class="label">Nome file*</span>
						<g:HTMLPanel styleName="abstract">
							<g:TextBox ui:field="nomeFileTextBox" styleName="testo"></g:TextBox><span> .pdf</span>
						</g:HTMLPanel>
						
					</g:HTMLPanel>
				</fieldset>
			</g:HTMLPanel> 
			   
			<g:HTMLPanel>
				<div class="filters">
					<fieldset>
						<hr />
						<div class="cell">
							<g:Button ui:field="annullaButton" text="Annulla" styleName="btn black" />
							<g:Button ui:field="indietroButton" text="Indietro" styleName="btn black" />
							<g:Button ui:field="avantiButton" text="Conferma" styleName="btn" />
						</div>
					</fieldset>
				</div>
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>

</ui:UiBinder>
