<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:ConsoleDisclosurePanel ui:field="emailDisclosure" animationEnabled="true" open="true">
		<g:HTMLPanel>
			<g:HTMLPanel stylePrimaryName="filters">
				<fieldset>
					<div class="cell acapo">
						<span class="label">Tipologia</span>
						<g:HTMLPanel styleName="abstract">
							<g:TextBox ui:field="tipologiaBox" />
						</g:HTMLPanel>
					</div>

					<div class="cell acapo">
						<span class="label">Email</span>
						<g:HTMLPanel styleName="abstract">
							<g:TextBox ui:field="emailBox" />
						</g:HTMLPanel>
					</div>

					<div class="cell acapo">
						<g:Button ui:field="aggiungiEmail" text="Aggiungi Email" styleName="btn" />
					</div>

				</fieldset>
			</g:HTMLPanel>

			<g:HTMLPanel ui:field="emailPanel" stylePrimaryName="filters" />

		</g:HTMLPanel>
	</g:ConsoleDisclosurePanel>
</ui:UiBinder>