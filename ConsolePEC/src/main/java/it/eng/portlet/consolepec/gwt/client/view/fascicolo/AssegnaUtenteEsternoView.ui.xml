<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:engitform="urn:import:it.eng.portlet.consolepec.gwt.client.widget.formricerca"
	xmlns:engit="urn:import:it.eng.portlet.consolepec.gwt.client.widget"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:dp="urn:import:com.google.gwt.user.datepicker.client" xmlns:s="urn:import:it.eng.portlet.consolepec.gwt.client.widget.suggestBox">
	<g:HTMLPanel>

		<g:HTMLPanel>
			<h1 class="maintitle"> Assegna Utente Esterno </h1>
		</g:HTMLPanel>

		<g:HTMLPanel stylePrimaryName="single">

			<g:HTMLPanel styleName="filters">
			
				<engit:MessageAlertWidget ui:field="messageWidget" />
				
				<fieldset>
				<h6>Indica l'indirizzo mail al quale inviare la notifica</h6>
					<g:HTMLPanel styleName="cell acapo">
						<span class="label"> Destinatari email </span>
						<g:HTMLPanel ui:field="destinatarioPanel" styleName="indirizziMailPanel">
						</g:HTMLPanel>
					</g:HTMLPanel>
					<g:HTMLPanel styleName="cell acapo">
						<span class="label">Testo email:</span>
						<g:HTMLPanel styleName="abstract">
							<g:TextArea ui:field="testoTextAreaBox" pixelSize="700,97"></g:TextArea>
						</g:HTMLPanel>
					</g:HTMLPanel>
				</fieldset>
				
			</g:HTMLPanel>

			<g:HTMLPanel styleName="filters">
				<g:HTMLPanel styleName="operazioni" >
					<g:HTMLPanel ui:field="mainOperazioniPanel" />
				</g:HTMLPanel>
			</g:HTMLPanel>
			<g:HTMLPanel>
				<div class="filters">
					<fieldset>
						<hr />
						<div class="cell">
							<g:Button ui:field="annullaButton" styleName="btn black" text="Annulla" />
							<g:Button ui:field="confermaButton" styleName="btn" text="Conferma" />
						</div>
					</fieldset>
				</div>
			</g:HTMLPanel>
			
		</g:HTMLPanel>

	</g:HTMLPanel>
</ui:UiBinder>
