									<localWorkers>4</localWorkers>
									<optimizationLevel>0</optimizationLevel>
									<disableCastChecking>true</disableCastChecking>
									<module>it.eng.portlet.consolepec.gwt.DevConsolePEC</module>
									<deploy>/tmp</deploy>
								</configuration>
								<goals>
									<goal>compile</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
