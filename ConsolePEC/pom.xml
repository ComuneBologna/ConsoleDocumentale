		<!-- -->
		<liferay.version>6.1.2</liferay.version>
		<gwt.version>2.7.0</gwt.version>
		<gwtp.version>1.5.3</gwtp.version>
		<gwtp.dispatch.version>1.0.3</gwtp.dispatch.version>
		<gwt.gin.version>2.1.2</gwt.gin.version>
		<gwt.plugin.version>2.7.0</gwt.plugin.version>
